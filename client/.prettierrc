{
	"printWidth": 100,
	"tabWidth": 1,
	"useTabs": true,
	"semi": true,
	"eslintIntegration": true,
	"singleQuote": true,
	"jsxSingleQuote": false,
	"trailingComma": "es5",
	"bracketSpacing": true,
	"jsxBracketSameLine": false,
	"arrowParens": "always",
	"requirePragma": false,
	"insertPragma": false,
	"proseWrap": "preserve",
	"overrides": [
		{
			"files": "*.js",
			"options": {
				"parser": "babel"
			}
		},
		{
			"files": "*.jsx",
			"options": {
				"parser": "babel"
			}
		}
	]
}
